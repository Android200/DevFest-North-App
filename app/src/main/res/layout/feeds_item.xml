<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:cardview="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="#dedede"
        cardview:cardElevation="1dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent">
            <TextView
                android:textSize="25sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                android:text="Title"
                android:id="@+id/ftitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="15sp"
                android:autoLink="all"
                android:textIsSelectable="true"
                android:text="Flutter is Googleâ€™s mobile app SDK for crafting high-quality native interfaces on iOS and Android in record time. Flutter works with existing code, is used by developers and organizations around, www.google.com, +234081839093"
                android:fontFamily="sans-serif"
                android:id="@+id/fcontent"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="15sp"
                android:text="Wed Jul 9"
                android:fontFamily="sans-serif"
                android:gravity="end"
                android:id="@+id/ftime"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>