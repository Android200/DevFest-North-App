<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#dedede"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    cardview:cardElevation="5dp"
    android:excludeFromRecents="true"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/aprofile_photo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/tweet"
        android:padding="3dp"/>

    <TextView android:textSize="18sp"
        android:id="@+id/atitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:layout_margin="10dp" />
    <TextView
        android:textSize="18sp"
        android:id="@+id/atime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:layout_margin="10dp" />

    <TextView
        android:textSize="18sp"
        android:autoSizeTextType="uniform"
        android:text="hello"
        android:id="@+id/awhen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />
    <TextView
        android:textSize="18sp"
        android:autoSizeTextType="uniform"
        android:text="hello"
        android:id="@+id/awhere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />
    <TextView
        android:textSize="18sp"
        android:autoSizeTextType="uniform"
        android:text="hello"
        android:id="@+id/aspeaker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />
    <TextView
        android:textSize="18sp"
        android:autoSizeTextType="uniform"
        android:text="hello"
        android:id="@+id/acategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/sclose"
            android:layout_gravity="right"
            android:layout_width="35dp"
            android:layout_height="35dp"
            cardview:srcCompat="@drawable/close"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:elevation="50dp"
            android:padding="3dp"/>
    </LinearLayout>
</LinearLayout>