<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#dedede"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:excludeFromRecents="true"
    cardview:cardElevation="5dp"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/SDimage"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/tweet"
        android:padding="3dp"/>

    <TextView android:textSize="18sp"
        android:id="@+id/SDname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:layout_margin="10dp" />
    <TextView
        android:textSize="18sp"
        android:id="@+id/SDtwitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:layout_margin="10dp" />

    <TextView
        android:textSize="18sp"
        android:autoSizeTextType="uniform"
        android:text="hello"
        android:id="@+id/SDtopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />
    <TextView
        android:textSize="18sp"
        android:autoSizeTextType="uniform"
        android:text="hello"
        android:id="@+id/SDwork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />
    <TextView
        android:textSize="18sp"
        android:autoSizeTextType="uniform"
        android:text="hello"
        android:id="@+id/SDabout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/SDclose"
            android:layout_gravity="right"
            android:layout_width="35dp"
            android:layout_height="35dp"
            cardview:srcCompat="@drawable/close"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:elevation="50dp"
            android:padding="3dp"/>
    </LinearLayout>
</LinearLayout>