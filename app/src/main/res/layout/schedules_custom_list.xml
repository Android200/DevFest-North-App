<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#dedede"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Sphoto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/speakers" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/Scategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:autoSizeTextType="uniform"
            android:background="@drawable/uiux_category"
            android:fontFamily="@font/googlesansmedium"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:layout_marginBottom="5dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="Category"
            android:textColor="#fff"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/Sspeaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/Sphoto"
            android:fontFamily="@font/googlesansmedium"
            android:text="Speaker"
            android:textColor="@color/textDark"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Stitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Sspeaker"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/Sphoto"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/googlesansmedium"
            android:text="Title"
            android:layout_marginTop="5dp"
            android:textColor="@color/textDark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Stime"
            android:drawableLeft="@drawable/ic_access_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Stitle"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/Sphoto"
            android:fontFamily="@font/googlesansregular"
            android:text="Time"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/Swhen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Stitle"
            android:layout_toRightOf="@+id/Sphoto"
            android:text="When"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/Swhere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Stime"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/Sphoto"
            android:text="Where"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_location_on"
            android:fontFamily="@font/googlesansregular"
            android:textSize="13sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>